<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/setTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="CardSet Title"
        app:layout_constraintBaseline_toBaselineOf="@+id/cardQuantityTV"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/cardQuantityTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="00"
        app:layout_constraintBaseline_toBaselineOf="@+id/cardsTV"
        app:layout_constraintEnd_toStartOf="@+id/cardsTV" />

    <TextView
        android:id="@+id/cardsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="cards"
        app:layout_constraintBaseline_toBaselineOf="@+id/editSetTV"
        app:layout_constraintEnd_toStartOf="@+id/editSetTV" />

    <TextView
        android:id="@+id/deleteSetTV"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/ic_delete"
        android:backgroundTint="@android:color/holo_red_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/editSetTV"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_edit"
        android:backgroundTint="@android:color/darker_gray"
        app:layout_constraintBaseline_toBaselineOf="@+id/deleteSetTV"
        app:layout_constraintEnd_toStartOf="@+id/deleteSetTV" />
</androidx.constraintlayout.widget.ConstraintLayout>